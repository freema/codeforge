root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab
indent_size = 4
max_line_length = 120

[*.{yaml,yml,json,toml}]
indent_style = space
indent_size = 2

[Taskfile.yaml]
indent_style = space
indent_size = 2

[Dockerfile*]
indent_style = space
indent_size = 4
